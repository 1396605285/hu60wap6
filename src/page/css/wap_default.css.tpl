{literal}
body { max-width:800px; margin:0px auto; padding:4px; background-color:#FFFFFF; color:#000000; }
p { margin:0px; padding:2px; }
div { margin:0px; padding:2px; }
a { text-decoration:none; color:#66f; }
form { margin:0px; padding:0px; }
input { background-color:#EFF4E8; color:#000000; }
img { border:none; }
hr { height:1px; border:1px solid #bbdf99; border-left:none; border-right:none; }
.tip,.button { margin:0px; background-color:#e6f8d5; color:#737373; border:1px solid #68995a; }
.title { border:1px solid #68995a; background-color:#e6f8d5; color:#1d7a00; }
.content { background-color:#FFFFFF; }
.notice { color:#ff0000; }
.linktext { font-weight:bold; }
.forum_list { margin:5px; border:1px solid #68995a; padding-left:5px; padding-right:5px; padding-top:3px; padding-bottom:3px; }
.forum_list div { border-left:none; border-right:none; padding:5px; height:30px; }
.topic_list, .topic_area { margin:5px; border:1px solid #68995a; padding-left:5px; padding-right:5px; padding-top:3px; padding-bottom:3px; }
.topic_list div { border-left:none; border-right:none; padding:5px; height:50px; }
.titletext,.button { font-size:20px; }
.righttext { float:right; }
.button { position:relative; top:-3px; }
.titletip { position:relative; top:2px }
.buttonbox { position:relative; top:-1px; }
.author { color:#737373; }
{/literal}